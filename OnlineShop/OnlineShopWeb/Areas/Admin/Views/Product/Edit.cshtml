@model ProductViewModel

	<div class="row">
		<div class="col-md-8">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="ImagePath" />
				<input type="hidden" asp-for="ConcurrencyToken" />
				<div class="form-group">
					<label asp-for="Name" class="control-label">Название</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Cost" class="control-label">Стоимость</label>
					<input asp-for="Cost" class="form-control" />
					<span asp-validation-for="Cost" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Descriprion" class="control-label">Описание</label>
					<input asp-for="Descriprion" class="form-control" />
					<span asp-validation-for="Descriprion" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Сохранить" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
