@model SetUserRolesViewModel

<form method="post">
	
		<div>
            <h3>Роли пользователя @Model.UserName</h3>
		</div>
    <input type="hidden" name="userName" value="@Model.UserName" />
       <br />
	
			@foreach (var role in Model.AllRoles)
            {
            <div>
                @if (Model.UserRoles.Contains(role))
                {
                    <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="true" checked />
                    <label class="form-check-label" for="checkChecked">@role.Name</label>
                }
                else
                {
                    <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="true" />
                    <label class="form-check-label" for="checkDefault">@role.Name</label>
                }
            </div>
            }
	

	<button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="User" asp-action="SetUserRoles">Сохранить</button>
</form>

