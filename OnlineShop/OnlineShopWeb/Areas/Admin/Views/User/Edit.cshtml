@model EditUser


<form method="post">
	<input type="hidden" value="@Model.UserName" name="oldUserName" />

	<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
	<div>
		<label asp-for="UserName">Логин (Email)</label><br />
		<input type="text" asp-for="UserName" />
		<span asp-validation-for="UserName" />
	</div>
		<div>
			<label asp-for="FirstName">Имя</label><br />
			<input type="text" asp-for="FirstName" />
			<span asp-validation-for="FirstName" />
		</div>
		<div>
			<label asp-for="LastName">Фамилия</label><br />
			<input type="text" asp-for="LastName" />
			<span asp-validation-for="LastName" />
		</div>
		<div>
			<label asp-for="Phone">Телефон</label><br />
			<input type="text" asp-for="Phone" />
			<span asp-validation-for="Phone" />
		</div>
		<br />
		<button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="User" asp-action="Edit">Сохранить</button>
</form>
