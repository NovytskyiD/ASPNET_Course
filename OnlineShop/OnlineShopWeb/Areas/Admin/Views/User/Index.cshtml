@model List<UserViewModel>

<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col-9">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Email (логин)</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Телефон</th>

                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th scope="row"><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-userName="@Model[i].UserName">@Model[i].UserName</a></th>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].Phone</td>

                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Add" role="button">Добавить пользователя</a>
        </div>

    </div>
</div>