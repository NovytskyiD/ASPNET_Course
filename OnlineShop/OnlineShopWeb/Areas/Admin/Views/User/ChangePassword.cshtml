@model ChangePassword
<form method="post">

	<div class="row text-center">
		<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
		<div class="col">
			<div>
				<label>Смена пароля для пользователя @Model.UserName</label><br />
			</div>
			<input type="hidden" name="UserName" value="@Model.UserName" />
			<div>
				<label asp-for="NewPassword">Пароль</label><br />
				<input type="text" asp-for="NewPassword" />
				<span asp-validation-for="NewPassword" />
			</div>
			<div>
				<label asp-for="PasswordConfirm">Повторите пароль</label><br />
				<input type="text" asp-for="PasswordConfirm" />
				<span asp-validation-for="PasswordConfirm" />
			</div>
			<button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Сохранить</button>
		</div>
	</div>
</form>