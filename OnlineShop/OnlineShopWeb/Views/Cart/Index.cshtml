@model CartViewModel

@{
    ViewData["Title"] = "View";
}

<div class="row">
	<div class="col">
		@if (Model == null||Model.Items.Count==0)
		{
			<h5>Ваша корзина пуста</h5>
		}

		else
		{ <table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Название</th>
						<th scope="col">Количество</th>
						<th scope="col">Цена</th>
						<th scope="col">Стоимость</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.Items.Count; i++)
					{
						<tr>
							<th scope="row">@(i + 1)</th>
							<td>@Model.Items[i].Product.Name</td>
							<td>
								<a class="btn" asp-area="" asp-controller="Cart" asp-action="IncreaseAmount" asp-route-productid="@Model.Items[i].Product.Id" asp-route-cartid="@Model.Id" role="button">
									<svg width="1em" height="1em" viewBox="0 0 24 24" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
										<path fill-rule="evenodd" d="m13 4c0-.55228-.4477-1-1-1s-1 .44772-1 1v7h-7c-.55228 0-1 .4477-1 1s.44772 1 1 1h7v7c0 .5523.4477 1 1 1s1-.4477 1-1v-7h7c.5523 0 1-.4477 1-1s-.4477-1-1-1h-7z" />
									</svg>
								</a>@Model.Items[i].Count<a class="btn" asp-area="" asp-controller="Cart" asp-action="DecreaseAmount" asp-route-productid="@Model.Items[i].Product.Id" asp-route-cartid="@Model.Id" role="button">
									<svg width="1em" height="1em" viewBox="0 0 24 24" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
										<path fill-rule="evenodd" d="m3 12c0-.5523.44772-1 1-1h16c.5523 0 1 .4477 1 1s-.4477 1-1 1h-16c-.55228 0-1-.4477-1-1z" />
									</svg>
								</a>
							</td>
							<td>@Model.Items[i].Product.Cost</td>
							<td>@Model.Items[i].Cost</td>
						</tr>
					}
					<tr>
						<th scope="row">Итого</th>
						<td></td>
						<td></td>
						<td></td>
						<td>@Model.Cost</td>
					</tr>
				</tbody>
			</table>
			<div class="text-center">
				<a class="btn btn-dark" asp-area="" asp-controller="Order" asp-action="Index" role="button">Оформить заказ</a>
				<a class="btn btn btn-info" asp-area="" asp-controller="Cart" asp-action="Clear" asp-route-cartid="@Model.Id" role="button">Очистить корзину</a>
			</div>
		}

	</div>

</div>
